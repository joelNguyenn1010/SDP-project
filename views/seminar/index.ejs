<% include ../partials/header %>
<% if(seminars.length > 0 && seminars) { %>
<table>
    <tr>
        <th>Seminar</th>
        <th>Venue</th>
        <th>Date</th>
        <th>Time</th>
        <th>Capacity</th>
        <th></th>
    </tr>
    <% seminars.forEach((seminar) => { %> 
        <tr>
            <td><%= seminar.name %></td>
            <td><%= seminar.venue %></td>
            <td><%= seminar.date %></td>
            <td><%= seminar.time %></td>
            <td><%= seminar.capacity %></td>
            <td><a class="btn btn-primary" href="/seminar/<%= seminar._id %>">Show</a></td>
            <td><a class="btn btn-primary" href="/attendee/new/<%= seminar._id %>">Register Attendee</a></td>
        </tr>
    <% }) %>
</table>
<% } else { %>
<p>There is no active seminar</p>
<% } %>
<a class="btn btn-primary" href="/seminar/new">Add</a>
<% include ../partials/footer %>