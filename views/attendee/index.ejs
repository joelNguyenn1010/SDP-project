<% include ../partials/header.ejs %>



<h1 class="mb-4 mt-5" align="center">LIST OF ALL ATTENDEES</h1>

<div class="container">
<% attendees.forEach((attendee)=>{ %>
<div class="card mt-4">
    <div class="card-body">
    <form action="/attendee/<%=seminarId%>/<%=attendee.email%>?_method=PUT" method="POST">

        <div class="form-group">
            <label for="inputname" class="col-sm-2 col-form-label">Name:</label>
  
            <input required type="text" class="form-control" id="inputname" placeholder="Name" name="name" value="<%=attendee.name%>">

        </div>

        <div class="form-group">
            <label for="inputemail" class="col-sm-2 col-form-label">Email:</label>
                <input required type="email" class="form-control" id="inputemail" placeholder="Email" name="email" value="<%=attendee.email%>">
        </div>

        <div class="form-group">
            <label for="inputphone" class="col-sm-2 col-form-label">Phone:</label>
                <input type="text" class="form-control" id="inputphone" placeholder="Phone" name="phone" value="<%=attendee.phone%>">
        </div>

        <input required type="hidden" name="attendeeOldEmail" value="<%= attendee.email %>" >
        <button class="btn btn-success">Save</button>
    </form>


<form action="/attendee/<%=seminarId%>/<%=attendee.email%>?_method=DELETE" method="POST">
    <button class="btn btn-danger">Delete</button>
</form>
<a href="/attendee/pdf/<%=attendee.email%>" class="btn btn-primary">Print name tag</a>
</div>
</div>


<% }); %>
</div>






<% include ../partials/footer.ejs %>